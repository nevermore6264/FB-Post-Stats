{
  "manifest_version": 3,
  "name": "Facebook Post Scraper",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "downloads", "tabs"],
  "host_permissions": ["http://m.facebook.com/*", "https://m.facebook.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://m.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
